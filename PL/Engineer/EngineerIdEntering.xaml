<Window x:Class="PL.Engineer.EngineerIdEntering"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Engineer"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="EngineerIdEntering" Height="128" Width="254">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>
        <Label HorizontalAlignment="Center" Grid.Row="0" Content="enter the engineer's id:"></Label>
        <TextBox HorizontalAlignment="Center" Width="230" Grid.Row="1" Text="{Binding Id}"></TextBox>
        <Grid Grid.Row="2" Margin="0,20,0,0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition ></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Margin="10,-13,18,-6" Click="CloseWindow">cancel</Button>
            <Button Grid.Column="1" Margin="20,-13,10,-6" Click="EnterId">confirm</Button>
        </Grid>
    </Grid>
</Window>
