<Window x:Class="PL.Manager.ganttChart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="ganttChart" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Gantt Chart" HorizontalAlignment="Center" FontSize="24" Margin="0,10"/>
        <!--the tasks list and bars - the size is reletive to the days it should take-->
        <ItemsControl  Grid.Row="1" ItemsSource="{Binding TasksList}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding Alias}" Grid.Column="0"/>
                        <Rectangle
                                   Grid.Column="1" 
                                   Fill="White" 
                                   Margin="2,0,0,0"
                                   HorizontalAlignment="Left"
                                   Width="{Binding Path=ScheduledDate, Converter={StaticResource ConvertMultiplyAndFindStartTimeKey}}" 
                                   Height="20"/>

                        <Rectangle Grid.Column="2" 
                                   Fill="{Binding Id, Converter={StaticResource TaskToColorKey}}"  
                                   Margin="2,0,0,0"
                                   HorizontalAlignment="Left"
                                   Width="{Binding Path=RequiredEffortTime.Days, Converter={StaticResource ConvertMultiplyToWidthKey}}" 
                                   Height="20"/>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
    </ScrollViewer>
</Window>