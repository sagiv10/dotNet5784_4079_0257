<Window x:Class="PL.Schedule.ScheduleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Schedule"
        mc:Ignorable="d"
        DataContext="{Binding Tasks, RelativeSource={RelativeSource Mode=Self}}"
        Title="ScheduleWindow" Height="351" Width="554">
    <ScrollViewer>
    <StackPanel >
        <TextBlock HorizontalAlignment="Center" Text="Choose an item:" FontWeight="Bold" Margin="5"/>
            <DataGrid ItemsSource="{Binding}">
            </DataGrid>
    </StackPanel>
    </ScrollViewer>

</Window>
